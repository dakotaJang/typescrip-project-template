{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "paths": {
      "src/*": ["src/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "include": [
    "./specs/**/*.ts",
    "./src/**/*.ts"
  ]
}